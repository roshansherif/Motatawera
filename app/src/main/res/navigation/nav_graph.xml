<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.egyedu.fragment.viewed.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/favoriteFlagment"
        android:name="com.example.egyedu.fragment.FavoriteFragment"
        android:label="fragment_favorite_flagment"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/profileFlagment"
        android:name="com.example.egyedu.fragment.ProfileFragment"
        android:label="ProfileFlagment"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.egyedu.fragment.FilterFragment"
        android:label="FilterFragment"
        tools:layout="@layout/fragment_filter"/>

    <fragment
        android:id="@+id/mycoursesFragment"
        android:name="com.example.egyedu.fragment.MyCoursesFragment"
        android:label="MycoursesFragment"
        tools:layout="@layout/fragment_my_courses"/><fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.egyedu.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first" >

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment><fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.egyedu.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second" >

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>


</navigation>